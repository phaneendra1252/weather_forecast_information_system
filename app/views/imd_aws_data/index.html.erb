<h1>Listing imd_aws_data</h1>

<%= form_tag(parse_imd_aws_data_imd_aws_data_path, method: :get) do %>
  <div class="field">
    <label>IMD States</label>
    <%= select_tag "aws_data[imd_state_code]", options_from_collection_for_select(@imd_states, :code, :name) %>
  </div>
  <div class="field">
    <label>From Date</label>
    <%= render "shared/datetimepicker", { text_field_data: text_field_tag("aws_data[from_date]", Date.yesterday.strftime("%B %d, %Y")) } %>
    <label>To Date</label>
    <%= render "shared/datetimepicker", { text_field_data: text_field_tag("aws_data[to_date]", Date.today.strftime("%B %d, %Y")) } %>
  </div>
  <div class="actions">
    <%= submit_tag "Get IMD AWS Data" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Sr no</th>
      <th>State name</th>
      <th>Station name</th>
      <th>Parse date</th>
      <th>Time utc</th>
      <th>Latitude n</th>
      <th>Longitude e</th>
      <th>Slp hpa</th>
      <th>Mslp hpa</th>
      <th>Rainfall mm</th>
      <th>Temperature deg c</th>
      <th>Dew point deg c</th>
      <th>Wind speed kt</th>
      <th>Wind dir deg</th>
      <th>Tmax deg c</th>
      <th>Tmin deg c</th>
      <th>Ptend hpa</th>
      <th>Sshm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imd_aws_data.each do |imd_aws_datum| %>
      <tr>
        <td><%= imd_aws_datum.sr_no %></td>
        <td><%= imd_aws_datum.state_name %></td>
        <td><%= imd_aws_datum.station_name %></td>
        <td><%= imd_aws_datum.parse_date %></td>
        <td><%= imd_aws_datum.time_utc %></td>
        <td><%= imd_aws_datum.latitude_n %></td>
        <td><%= imd_aws_datum.longitude_e %></td>
        <td><%= imd_aws_datum.slp_hpa %></td>
        <td><%= imd_aws_datum.mslp_hpa %></td>
        <td><%= imd_aws_datum.rainfall_mm %></td>
        <td><%= imd_aws_datum.temperature_deg_c %></td>
        <td><%= imd_aws_datum.dew_point_deg_c %></td>
        <td><%= imd_aws_datum.wind_speed_kt %></td>
        <td><%= imd_aws_datum.wind_dir_deg %></td>
        <td><%= imd_aws_datum.tmax_deg_c %></td>
        <td><%= imd_aws_datum.tmin_deg_c %></td>
        <td><%= imd_aws_datum.ptend_hpa %></td>
        <td><%= imd_aws_datum.sshm %></td>
        <td><%= link_to 'Show', imd_aws_datum %></td>
        <td><%= link_to 'Edit', edit_imd_aws_datum_path(imd_aws_datum) %></td>
        <td><%= link_to 'Destroy', imd_aws_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

