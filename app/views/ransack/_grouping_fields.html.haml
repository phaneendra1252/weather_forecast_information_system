- associations = associations
%fieldset{ class: 'fields', 'data-object-name' => f.object_name }
  %legend
    Match #{f.combinator_select} conditions
  = f.condition_fields do |c|
    = render :partial => 'ransack/condition_fields', locals: { f: c, associations: associations }
  = render 'ransack/render_fields', f: f, type: :condition, name: 'Add Condition', associations: associations
  = f.grouping_fields do |g|
    = render 'ransack/grouping_fields', f: g, associations: associations